[cxx]
  default_platform = iphonesimulator-x86_64
  cflags = -g -std=c11
  cxxflags = -g -std=c++14
  combined_preprocess_and_compile = true

[alias]
  demo_app = //Apps/BuckDemoApp:BuckDemoApp
  nasa_app = //Apps/NASA:NASA

[project]
  ide = xcode
  ignore = .buckd, \
           .hg, \
           .git, \
           buck-out, \
